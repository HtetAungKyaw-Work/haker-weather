<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.haker.hakerweather.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_astronomy"
        android:name="com.haker.hakerweather.ui.astronomy.AstronomyFragment"
        android:label="@string/title_astronomy"
        tools:layout="@layout/fragment_astronomy" />

    <fragment
        android:id="@+id/navigation_sports"
        android:name="com.haker.hakerweather.ui.sports.SportsFragment"
        android:label="@string/title_sports"
        tools:layout="@layout/fragment_sports" />
